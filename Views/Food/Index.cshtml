@model List<KashiHomeFood.Models.Food>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>

    </tr>


    @foreach (var food in Model)
    {
        <tr>
            <td>@food.Name</td>
            <td>@food.Description</td>
            <td>@food.Price</td>

        </tr>
    }


</table>

@if (Model.Count == 0)
{
    <p>No Food yet!</p>
}

<p><a asp-controller="Food" asp-action="Add">Add Food </a></p>
<p><a asp-controller="Food" asp-action="Remove">Remove Food </a></p>