@model KashiHomeFood.ViewModels.AddMenuItemViewModel

<h1>Add Item to Menu: @Model.Menu.Name</h1>


<form asp-controller="Menu" asp-action="AddItem" method="post">

    <div class="form-group">
        <label asp-for="FoodID"></label>
        <select asp-for="FoodID" asp-items="Model.Foods"></select>

        <span asp-validation-for="FoodID"></span>
    </div>
    <input type="hidden" name="MenuID" value="@Model.Menu.ID" />
    <input type="submit" value="Add Item" />

</form>